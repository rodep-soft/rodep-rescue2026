    <!-- Camera Links (simplified) -->
    <link name="gui_d435_link">
        <visual>
            <geometry>
                <mesh filename="package://urdf_test_node/meshes/d435.STL"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 -1.57"/>
            <material name="white">
